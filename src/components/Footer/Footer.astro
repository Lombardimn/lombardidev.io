---
import Icon from '@/components/Global/Icon.astro';
import Social from './Social.astro';
const currentYear = new Date().getFullYear();
---

<footer class="flex flex-col gap-12 mt-auto pt-12 px-8 pb-12 text-center text-c-400 text-medium md:text-large md:flex-row md:justify-between md:py-10 md:px-20">
	<section class="flex flex-col gap-2 md:flex-row md:gap-4 md:flex-wrap">
		<p class="flex justify-center gap-2 items-center">
			Desarrollado con 
			<a
				target="_blank" 
				rel="noopener noreferrer"  
				href="https://astro.build/"
				class="text-c-400 underline decoration-transparent decoration-solid underline-offset-4 transition ease-in-out duration-300 flex flex-row hover:text-accent-regular focus:text-accent-regular dark:hover:text-accent-regular"
			>
				Astro
				<Icon icon="rocket-launch" size="1.2em" />
			</a>
		</p>
		<p class="mt-2 md:mt-0">&copy; {currentYear} @lombardidev</p>
	</section>

  <Social />
</footer>