---
import type { CollectionEntry } from 'astro:content'

interface Props {
  project: CollectionEntry<'projects'>
}

const { data, slug } = Astro.props.project
---
<a href={`/projects/${slug}`} class="grid grid-rows h-44 border-2 border-solid border-c-800 rounded-xl overflow-hidden shadow-bs-sm font-brand text-large font-medium transition ease-in-out duration-200 hover:shadow-bs-md">
  <span class="col-start-1 col-end-2 row-start-1 row-end-2 z-10 m-2 py-2 px-4 bg-c-999 text-c-200 rounded-md">{data.title}</span>
  <img src={data.image} alt={data.altImage} width="700" height="525" loading="lazy" transition:name=`image-${data.idImage}-projects` class="grid col-start-1 col-end-3 row-start-1 row-end-3 w-full h-full object-cover">
</a>