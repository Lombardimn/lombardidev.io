---
import { iconPaths } from '@/utils/iconsPath.ts'
import Icon from '@/components/Global/Icon.astro'
import ThemeToggle from './ThemeToggle.astro'

interface TextLink {
  label: string
  href: string
  active?: boolean
}

interface IconLink extends TextLink {
  icon: keyof typeof iconPaths

}

// Textos para el Menu
const textLinks: TextLink[] = [
  { label: 'Inicio', href: '/' },
  { label: 'Proyectos', href: '/work/' },
  { label: 'Sobre MÃ­', href: '/about/' }
]

// Iconos para redes
const iconLinks: IconLink[] = [
  {
    label: 'Github',
    href: 'https://github.com/Lombardimn',
    icon: 'github'
  },
  {
    label: 'Linkedin',
    href: 'https://linkedin.com/in/mnlombardi/',
    icon: 'linkedin'
  },
  {
    label: 'Discord',
    href: 'https://discord.gg/d6FASY2X',
    icon: 'discord'
  }
]
---
<header>
  <nav class="z-50 relative font-brand font-medium mb-14">
    <section class="relative flex justify-between gap-2 p-6">
      <a href="/" class="flex gap-2 items-center leading-tight text-c-0">
        <div class="bg-c-600/20 rounded-full bg-opacity-50 backdrop-blur-lg w-20 h-20 absolute top-3">
          <img src="/logomain.webp" alt="Logo de lombardidev" loading="lazy" width="80" height="80" class="drop-shadow-dropmd">
        </div>
      </a>

      <menu-button>
        <template>
          <button class="menu-button relative flex border-0 rounded-full p-2 text-2xl text-c-300 bg-btn-r-gradient shadow-bs-md aria-expanded:text-c-0 aria-expanded:bg-btn-gradient before:absolute before:-inset-1 before:content[''] before:bg-stroke before:rounded-full before:-z-10" aria-expanded="false">
            <span class="sr-only">Menu</span>
            <Icon icon="list" />
          </button>
        </template>
      </menu-button>
    </section>

    <section id="menu-content" hidden class="absolute left-0 right-0">
      <ul class="m-0 flex flex-col gap-4 text-medium leading-tight list-none p-8 bg-c-999 border-b-2 border-solid border-c-800">
        {
          textLinks.map(({label, href}) => (
            <li>
              <a
                aria-current={Astro.url.pathname === href}
                class:list={[
                  'inline-block', 'text-c-300', 'active:text-c-0',
                  {
                    active: Astro.url.pathname === href || (href !== '/' && Astro.url.pathname.startsWith(href))
                  }
                ]}
                href={href}
                >
                  {label}
                </a>
            </li>
          ))
        }
      </ul>

      <section class="flex justify-between gap-3 py-6 pr-8 pl-6 bg-c-999 rounded-tl-none rounded-tr-none rounded-br-xl rounded-bl-xl shadow-bs-lg">
        <div class="flex flex-wrap gap-3 text-xlarge">
          {
            iconLinks.map(({label, href, icon}) => (
              <a href={href} target="_blank" rel="noopener noreferrer" class="flex p-2 text-accent-dark transition-colors ease-in-out hover:focus:text-accent-text-over">
                <span class="sr-only">{label}</span>
                <Icon icon={icon} />
              </a>
            ))
          }
        </div>
        <div class="flex items-center h-[calc(1.625rem + 2 * 0.5rem)]">
          <ThemeToggle />
        </div>
      </section>
    </section>
  </nav>
</header>
